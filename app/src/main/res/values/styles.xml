<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="small_fare_">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/B_white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="powered_by">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/B_white</item>
    </style>


    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="colorPrimary">@color/light_blue</item>

        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item>

        <item name="strokeColor">@color/light_blue</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:textColor">@color/white</item>

        <item name="colorOnSurface">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/B_white</item>

        <!-- border color -->
        <item name="boxStrokeColor">@color/selector_edit_text_border_login</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/selector_text_input_layout_hint_color</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/selector_text_input_layout_hint_color</item>
    </style>

    <style name="FareTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/light_blue</item>

        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item>

        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:textColor">@color/black</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/B_black</item>

        <!-- border color -->
        <item name="boxStrokeColor">@color/selector_edit_text_border_fare</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/selector_text_input_layout_hint_fare_color</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/selector_text_input_layout_hint_fare_color</item>
    </style>

    <style name="FareTextInputLayoutDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconTint">@color/B_black</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorControlActivated">@color/light_blue</item>
        <item name="colorControlNormal">@color/light_blue</item>
        <item name="colorControlHighlight">@color/light_blue</item>

        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:textColor">@color/black</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/B_black</item>

        <!-- border color -->
        <item name="boxStrokeColor">@color/selector_edit_text_border_fare</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/selector_text_input_layout_hint_fare_color</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/selector_text_input_layout_hint_fare_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="colorControlActivated">@color/light_blue</item>
    </style>

    <style name="EditTextCreateLogin">
        <item name="colorControlActivated">@color/light_blue</item>
    </style>

    <style name="SearchViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@color/white</item>
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="EditTextCreateFare">
        <item name="colorControlActivated">@color/B_black</item>
    </style>

</resources>